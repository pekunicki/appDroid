<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/BlackColor</item>
    </style>

    <style name="AppDataText">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">60sp</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppInputData">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppMetricSystemText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/metricSystemColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppRadioButtonInMetricSystem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppBmiResultText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_marginTop">30sp</item>
    </style>

    <style name="AppInfoImage">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:src">@drawable/info_icon</item>
    </style>

</resources>
